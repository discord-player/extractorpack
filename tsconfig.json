{
    "display": "Default",
    "compilerOptions": {
        "target": "ES2020",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": false,
        "outDir": "./bin",
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "pretty": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "node_modules",
        "bin/**/*.ts"
    ],
    "include": [
        "./cli/**/*.ts"
    ]
}